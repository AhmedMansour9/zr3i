<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="2dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/farmer_shape">

    <TextView
        android:id="@+id/name_of_farmer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/phone_of_farmer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:drawableTint="@color/blackFateh"
        android:drawablePadding="10dp"
        android:textColor="@color/greenFateh"
        android:layout_margin="5dp"
        android:visibility="gone"

        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/government_of_farmer_text_view"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableTint="@color/blackFateh"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:visibility="gone"

            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/age_of_farmer_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableTint="@color/blackFateh"
            android:paddingEnd="20dp"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="5dp"
            android:visibility="gone"

            android:layout_marginVertical="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>

    <TextView
    android:id="@+id/address_of_farmer_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/ic_baseline_location_city_24"
    android:drawableTint="@color/blackFateh"
    android:paddingEnd="20dp"
    android:drawablePadding="10dp"
        android:visibility="gone"

        android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:id="@+id/email_of_farmer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawableTint="@color/blackFateh"
        android:textColor="@color/greenFateh"
        android:paddingEnd="20dp"
        android:drawablePadding="10dp"
        android:visibility="gone"

        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    <TextView
        android:id="@+id/code_of_farmer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_qr_code_2_24"
        android:drawableTint="@color/blackFateh"
        android:paddingEnd="20dp"
        android:drawablePadding="10dp"
        android:layout_marginHorizontal="5dp"
        android:visibility="gone"
        android:layout_marginVertical="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:id="@+id/edit_farmer_relative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_marginHorizontal="5dp">
            <ImageView
                android:id="@+id/edit_farmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/blackFateh"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delete_farmer_relative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="10dp">

            <ImageView
                android:id="@+id/delete_farmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/blackFateh" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>