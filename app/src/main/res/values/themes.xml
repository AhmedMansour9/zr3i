<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zr3i" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/font</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="boxStrokeColor">@color/baseGreen</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="boxStrokeWidth">0.5dp</item>
    </style>

    <style name="TextInputLayoutNotEnabledStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/blackFateh</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="boxStrokeColor">@color/greenFateh</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ProgressBarCustom" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/greenMazbot</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">@color/red</item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/greenFateh</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/greenMazbot
        </item>
    </style>

    <style name="Theme.Zr3i.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zr3i.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zr3i.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>